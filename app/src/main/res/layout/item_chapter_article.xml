<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content" android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tv_item_chapter_article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/tv_item_chapter_article_time"
              android:textSize="14sp"
              android:textAllCaps="false"
              android:gravity="center_vertical"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginTop="5dp"
              app:layout_constraintTop_toBottomOf="@id/tv_item_chapter_article_title"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/tv_item_chapter_article_author"
              android:textSize="14sp"
              android:textAllCaps="false"
              android:gravity="center_vertical"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/tv_item_chapter_article_time"
              android:layout_marginTop="5dp"/>

    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@color/pale_turquoise1"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/tv_item_chapter_article_author"
          app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/iv_item_chapter_article"
               android:src="@mipmap/chapter"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               android:contentDescription="@null"
               android:layout_margin="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>